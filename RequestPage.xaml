<Page x:Class="GlobusT.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GlobusT"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RequestPage"
      Loaded="Page_Loaded">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button x:Name="BackButton" Content="Назад" Height="25" Width="80" HorizontalAlignment="Left" Click="BackButton_Click"/>
            <TextBlock Text="Поиск:" VerticalAlignment="Center"/>
            <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged" Padding="3" ToolTip="ФИО клиента или № заявки"/>
            <ComboBox x:Name="StatusFilterComboBox" Width="150" DisplayMemberPath="Name" SelectionChanged="StatusFilterComboBox_SelectionChanged"/>
            <TextBlock Text=" Сортировка:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <Button x:Name="SortButton" Content="По дате " Padding="10,5" Click="SortButton_Click"/>
            <Button Content="Создать" x:Name="CreateRequestButton" Click="CreateRequestButton_Click" Width="120" Margin="20,0,0,0" Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <ItemsControl x:Name="RequestItemControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:RequestCard/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
